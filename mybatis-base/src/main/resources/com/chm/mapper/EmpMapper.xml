<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chm.mapper.EmpMapper">
<!--    Emp getEmpAndDeptByEid(@Param("id") int empId);-->
    <select id="getEmpAndDeptByEid" resultMap="EmpAndDeptByEid">
        select employee.*,dept.dept_name
        from employee
        left join dept
        on employee.dept_id = dept.dept_id
        where employee.emp_id = #{id}
    </select>
    <resultMap id="EmpAndDeptByEid" type="Emp">
        <id column="emp_id" property="empId"/>
        <result column="emp_name" property="empName"/>
        <result column="emp_age" property="empAge"/>
        <result column="emp_email" property="empEmail"/>
        <result column="dept_id" property="dept.deptId"/>
        <result column="dept_name" property="dept.deptName"/>
    </resultMap>


</mapper>